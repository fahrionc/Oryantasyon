@model EntityLayer.Concrete.AdminCar
@{
    ViewBag.Title = "AdminEditCar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1 class="pt-3 pl-3">Araç Güncelleme Sayfası</h1>
    <br />
    @using (Html.BeginForm("AdminEditCar", "AdminCar", FormMethod.Post))
    {
        <div class="form-group pl-3">
            @Html.Label("Arac ID")
            @Html.TextBoxFor(x => x.CarID, new { @class = "form-control" })
            <br />
            @Html.Label("Arac Adı")
            @Html.TextBoxFor(x => x.CarName, new { @class = "form-control" })
            <br />
            @Html.Label("Arac Plakası")
            @Html.TextBoxFor(x => x.CarPlate, new { @class = "form-control" })
            <br />
            <button class="btn btn-success">Güncelle</button>
        </div>
    }
</div>

