@using EntityLayer.Concrete
@model List<AdminCar>
@{
    ViewBag.Title = "GetCarList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h3 class="pt-3 pl-3">Araç Bilgileri Listesi</h3>
    <br />
    <table class="table table-bordered table-hover">
        <tr class="text-center">
            <th>#</th>
            <th>Araç Adı</th>
            <th>Araç Plakası</th>
            <th>Araç Sil</th>
            <th>Araç Güncelle</th>

        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr class="text-center">
                <th>@count</th>
                <td>@item.CarName</td>
                <td>@item.CarPlate</td>
                <td><a href="/AdminCar/AdminDeleteCar/@item.CarID" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCar/AdminEditCar/@item.CarID" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/AdminCar/AdminAddCar/" class="btn btn-success">Yeni Araç Ekle</a>
</div>