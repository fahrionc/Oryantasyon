@model EntityLayer.Concrete.User
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Kullanıcı Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/login_v3/css/style.css">

</head>
<body class="img js-fullheight " style="background-image: url(/Content/login_v3/images/bg.jpg);">
    <section class="ftco-section d-flex align-items-center justify-content-center min-vh-100">
        <div class="container">
            <div class="row justify-content-center">
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Giris Yap</h3>



                        <form action="/Login/UserLogin" method="post" class="signin-form">
                            <div class="form-group">
                                <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="UserPassword" class="form-control" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatrıla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifremi unuttum</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/login_v3/js/jquery.min.js"></script>
    <script src="~/Content/login_v3/js/popper.js"></script>
    <script src="~/Content/login_v3/js/bootstrap.min.js"></script>
    <script src="~/Content/login_v3/js/main.js"></script>

</body>
</html>

